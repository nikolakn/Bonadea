<% provide(:title, "") %>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for(:session, url: login_path) do |f| %>
<%= f.label :ime %>
<%= f.text_field :ime, list: 'first-name', class: 'form-control' %>
  <datalist id="first-name">
    <% Staff.select(:name).distinct.each do |person| %>
      <option value="<%= person.name %>"></option>
    <% end %>
  </datalist>
  
<%= f.label :Lozinka %>
<%= f.password_field :password, class: 'form-control'%>
<%= f.submit "Prijava", class: "btn btn-primary" %>
<% end %>
</div>
</div>